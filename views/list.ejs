<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
    <link rel="stylesheet" href="css/styles.css">
    <link rel="icon" type="image/x-icon" href="https://cdn-icons-png.flaticon.com/512/4697/4697260.png">

</head>

<body>
    <div class="box" id="heading">
        <h1><%= listTitle %> </h1>
    </div>

    <div class="box">
       <% newItemLists.forEach((item)=>{ %>
        <form action="/delete" method="post">
                <div class="item">
                <input type="checkbox" name="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
                <p><%=item.name%></p>
    
            </div>
        </form>
        <%})%>

        <form clsss="item"action="/" method="post">
            <input type="text" name="newItem" placeholder="New Task" autocomplete="off">
            <button type="submit" name="button" value="<%= listTitle %>">+</button>
            
        </form>
        


    </div>
    
   

  
   
    
</body>
</html>